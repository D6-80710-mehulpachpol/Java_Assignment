		System.out.println("7. Mark all sour fruits stale");
		System.out.println("8. Display tastes of all stale(not fresh) fruits in the basket.");
		System.out.println("0. EXIT");

		Scanner sc = new Scanner(System.in);
		option = sc.nextInt();
		return option;
	}


